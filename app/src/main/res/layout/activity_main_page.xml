<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1F25"

    tools:context=".MainActivity">



    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_view"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_view"
        android:rowCount="4"
        android:columnCount="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-80dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/createEventCard"
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/make_event"
                    android:background="@color/background"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/createEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="create an event"
                    android:textColor="@color/foreground"
                    android:textSize="20dp"
                    android:fontFamily="@font/variable"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/attendEventCard"
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/attend_event"
                    android:background="@color/background"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/attendEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="attend an event"
                    android:textColor="@color/foreground"
                    android:fontFamily="@font/variable"
                    android:textSize="20dp"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/eventsToAttendCard"
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/events_to_attend"
                    android:background="@color/background"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/eventsToAttend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="events list"
                    android:textColor="@color/foreground"
                    android:textSize="20dp"
                    android:fontFamily="@font/variable"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/manageYourEventsCard"
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/manage_your_event"
                    android:background="@color/background"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/manageYourEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="manage events"
                    android:textColor="@color/foreground"
                    android:textSize="20dp"
                    android:fontFamily="@font/variable"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/EventsRecommendationCard"
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="0"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/events_recommendation"
                    android:background="@color/background"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/EventsRecommendation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="public events"
                    android:textColor="@color/foreground"
                    android:textSize="20dp"
                    android:fontFamily="@font/variable"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard"
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/profile"
                    android:background="@color/background"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="profile"
                    android:textColor="@color/foreground"
                    android:fontFamily="@font/variable"
                    android:textSize="20dp"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/annualEvents"
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="30dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="3"
            android:layout_column="0"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:src="@drawable/baseline_developer_board_24"
                    app:tint="#A9FF9800"
                    android:background="@color/background"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/annual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Annual Events"
                    android:textColor="@color/foreground"
                    android:fontFamily="@font/variable"
                    android:textSize="20dp"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/discoverClubs"
        android:layout_width="150dp"
        android:layout_height="70dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="30dp"
        android:layout_margin="10dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="3"
        android:layout_column="1"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/background"
            android:gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:src="@drawable/discover"
                app:tint="#A9FF9800"
                android:background="@color/background"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/ensiasClubs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ensias clubs"
                android:textColor="@color/foreground"
                android:fontFamily="@font/variable"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </GridLayout>

    <TextView
        android:id="@+id/dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:fontFamily="@font/simple"
        android:textColor="@color/background"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="logout"
        android:textColor="@color/background3"
        android:textSize="25dp"
        android:fontFamily="@font/variable"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:paddingVertical="3dp"
        android:paddingHorizontal="7dp"

        android:background="@drawable/rectangle_view"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="username"

        android:textColor="@color/background"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="@font/variable"
        />



</RelativeLayout>