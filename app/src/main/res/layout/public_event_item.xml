<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/background3"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/eventImage_p"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            />
        <View
            android:layout_marginTop="-5dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/line_view"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/eventItemTitle_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:fontFamily="@font/variable"

            android:textColor="@color/foreground"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/eventItemLocation_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@ Amphi1"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/simple"
            android:textStyle="bold"
            android:textSize="14sp"

            android:layout_marginBottom="5dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_view"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/eventItemDateTime_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/eventItemDate_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="DD/MM/YYYY"
                    android:fontFamily="@font/variable"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/foreground"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/eventItemTime_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hh:mm"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/simple"
                    android:textColor="#FFFFFF"

                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"/>

            </LinearLayout>

            <Button
                android:id="@+id/eventItemAttend_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/foreground"
                android:text="Attend"
                android:fontFamily="@font/variable"
                android:textColor="@color/background"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/line_view"
            />

    </LinearLayout>

</LinearLayout>
