<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_marginBottom="15dp"
    android:id="@+id/manageEventItem"
    android:clickable="true">

    <TextView
        android:id="@+id/manageEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hhhh"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/foreground"/>

    <TextView
        android:id="@+id/manageEventLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="\@ location"
        android:textColor="@color/foreground"
        android:layout_marginBottom="5dp"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/line_view"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/manageEventDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/manageEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="DD/MM/YYYY"
                android:layout_marginTop="10dp"
                android:textColor="@color/foreground"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/manageEventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hh:mm"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:textColor="@color/foreground"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/manageEventPrivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginRight="21dp"
            android:background="@color/warning"
            android:padding="5dp"
            android:text="Private"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/line_view"
        />

</LinearLayout>